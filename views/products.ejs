<%- include("partials/header")%>
<div class="ui main container">
  <div class="ui huge header">Lucias Website</div>
  <div class="ui top attached segment">
    <div class="ui divided items">
      <%products.forEach(function(product){%>
      <div class="item">
        <div class="image">
          <img src="<%=product.image%>" width="200" height="100" />
        </div>
        <div class="content block">
          <a href="/products/<%=product._id%>" class="header"
            ><%=product.title%></a
          >
          <div class="meta block" style="display: block; margin: 0; padding: 0">
            <p><%=product.created.toDateString()%></p>
          </div>
          <div class="description">
            <p><%-product.body.substring(0, 50)%>...</p>
          </div>
          <div class="extra block">
            <a
              href="/products/<%=product._id%>"
              class="button inverted primary ui"
              >Product Details</a
            >
          </div>
        </div>
      </div>
      <%})%>
    </div>
  </div>
</div>

<%- include("partials/footer")%>
